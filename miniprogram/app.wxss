/* app.wxss - 全局样式 */

/* 页面通用样式 */
page {
  background-color: #f5f5f5;
  font-family: -apple-system, BlinkMacSystemFont, 'Helvetica Neue', Helvetica, Segoe UI, Arial, Roboto, 'PingFang SC', 'miui', 'Hiragino Sans GB', 'Microsoft Yahei', sans-serif;
  font-size: 28rpx;
  color: #333;
  height: 100%;
}

/* 通用容器 */
.container {
  padding: 20rpx;
  background-color: #fff;
  margin-bottom: 20rpx;
  border-radius: 12rpx;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.1);
}

/* 文本溢出省略号 */
.ellipsis {
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.ellipsis-2 {
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
  overflow: hidden;
}

/* 清除浮动 */
.clearfix::after {
  content: "";
  display: block;
  clear: both;
  height: 0;
  line-height: 0;
  visibility: hidden;
}

/* Flex 布局 */
.flex {
  display: flex;
}

.flex-column {
  flex-direction: column;
}

.flex-center {
  justify-content: center;
  align-items: center;
}

.flex-between {
  justify-content: space-between;
}

.flex-around {
  justify-content: space-around;
}

.flex-1 {
  flex: 1;
}

/* 间距 */
.margin-top-20 {
  margin-top: 20rpx;
}

.margin-bottom-20 {
  margin-bottom: 20rpx;
}

.margin-20 {
  margin: 20rpx;
}

.padding-20 {
  padding: 20rpx;
}

.padding-top-20 {
  padding-top: 20rpx;
}

.padding-bottom-20 {
  padding-bottom: 20rpx;
}

/* 文本样式 */
.text-center {
  text-align: center;
}

.text-right {
  text-align: right;
}

.text-primary {
  color: #1890ff;
}

.text-danger {
  color: #ff4d4f;
}

.text-success {
  color: #52c41a;
}

.text-warning {
  color: #faad14;
}

.text-muted {
  color: #999;
}

.text-bold {
  font-weight: bold;
}

.text-lg {
  font-size: 32rpx;
}

.text-sm {
  font-size: 24rpx;
}

/* 按钮样式 */
.btn {
  display: inline-block;
  padding: 20rpx 40rpx;
  font-size: 28rpx;
  line-height: 1.5;
  text-align: center;
  white-space: nowrap;
  vertical-align: middle;
  cursor: pointer;
  user-select: none;
  border: 1rpx solid transparent;
  border-radius: 8rpx;
  transition: all 0.3s ease;
}

.btn-primary {
  color: #fff;
  background-color: #1890ff;
  border-color: #1890ff;
}

.btn-primary:hover {
  background-color: #40a9ff;
  border-color: #40a9ff;
}

.btn-default {
  color: #333;
  background-color: #fff;
  border-color: #d9d9d9;
}

.btn-default:hover {
  color: #1890ff;
  border-color: #1890ff;
}

.btn-danger {
  color: #fff;
  background-color: #ff4d4f;
  border-color: #ff4d4f;
}

.btn-sm {
  padding: 10rpx 20rpx;
  font-size: 24rpx;
}

.btn-lg {
  padding: 30rpx 60rpx;
  font-size: 32rpx;
}

/* 列表样式 */
.list-item {
  padding: 20rpx;
  background-color: #fff;
  border-bottom: 1rpx solid #f0f0f0;
  display: flex;
  align-items: center;
}

.list-item:last-child {
  border-bottom: none;
}

.list-item-content {
  flex: 1;
  margin-left: 20rpx;
}

.list-item-title {
  font-size: 28rpx;
  color: #333;
  margin-bottom: 10rpx;
}

.list-item-desc {
  font-size: 24rpx;
  color: #999;
}

.list-item-image {
  width: 120rpx;
  height: 120rpx;
  border-radius: 8rpx;
}

/* 输入框样式 */
.input-group {
  margin-bottom: 20rpx;
}

.input-label {
  display: block;
  margin-bottom: 10rpx;
  font-size: 28rpx;
  color: #333;
}

.input-field {
  width: 100%;
  height: 80rpx;
  padding: 0 20rpx;
  font-size: 28rpx;
  border: 1rpx solid #d9d9d9;
  border-radius: 8rpx;
  background-color: #fff;
  box-sizing: border-box;
}

.input-field:focus {
  border-color: #40a9ff;
  outline: none;
}

/* 加载中样式 */
.loading-container {
  display: flex;
  justify-content: center;
  align-items: center;
  padding: 40rpx;
}

.loading-text {
  margin-left: 20rpx;
  font-size: 24rpx;
  color: #999;
}

/* 空状态样式 */
.empty-container {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 80rpx 20rpx;
}

.empty-image {
  width: 200rpx;
  height: 200rpx;
  margin-bottom: 20rpx;
}

.empty-text {
  font-size: 28rpx;
  color: #999;
  margin-bottom: 20rpx;
}

.empty-button {
  padding: 16rpx 40rpx;
  font-size: 28rpx;
  color: #1890ff;
  border: 1rpx solid #1890ff;
  border-radius: 8rpx;
}

/* 标签样式 */
.tag {
  display: inline-block;
  padding: 4rpx 12rpx;
  font-size: 24rpx;
  border-radius: 4rpx;
  margin-right: 10rpx;
}

.tag-primary {
  color: #1890ff;
  background-color: #e6f7ff;
  border: 1rpx solid #91d5ff;
}

.tag-success {
  color: #52c41a;
  background-color: #f6ffed;
  border: 1rpx solid #b7eb8f;
}

.tag-warning {
  color: #faad14;
  background-color: #fffbe6;
  border: 1rpx solid #ffe58f;
}

.tag-danger {
  color: #ff4d4f;
  background-color: #fff1f0;
  border: 1rpx solid #ffa39e;
}

/* 徽标样式 */
.badge {
  position: absolute;
  top: -8rpx;
  right: -8rpx;
  display: inline-flex;
  justify-content: center;
  align-items: center;
  min-width: 32rpx;
  height: 32rpx;
  padding: 0 6rpx;
  font-size: 20rpx;
  color: #fff;
  background-color: #ff4d4f;
  border-radius: 16rpx;
  line-height: 1;
}

/* 全局图片默认样式，防止图片加载失败 */
image {
  display: block;
  background-color: #f5f5f5;
}

/* 商品图默认背景 */
.default-product {
  background: linear-gradient(135deg, #ff6b6b 0%, #feca57 100%);
}

/* 分类图标默认背景 */
.default-category {
  background: linear-gradient(135deg, #ff6b6b 0%, #feca57 100%);
}

/* 轮播图默认背景 */
.banner-image {
  background: linear-gradient(135deg, #ff6b6b 0%, #feca57 100%);
}

/* 头像默认背景 */
.default-avatar {
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
}

/* 图标默认背景 */
.order-icon,
.menu-icon {
  background: linear-gradient(135deg, #ff6b6b 0%, #feca57 100%);
}

/* 空状态图片 */
.empty-icon,
.empty-image {
  background: linear-gradient(135deg, #f5f5f5 0%, #e8e8e8 100%);
}