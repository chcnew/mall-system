<view class="address-edit">
  <view class="form">
    <view class="form-item">
      <view class="label">收货人</view>
      <input 
        class="input" 
        placeholder="请输入收货人姓名" 
        value="{{name}}"
        bindinput="onNameInput"
      ></input>
    </view>

    <view class="form-item">
      <view class="label">手机号</view>
      <input 
        class="input" 
        type="number" 
        maxlength="11"
        placeholder="请输入手机号" 
        value="{{phone}}"
        bindinput="onPhoneInput"
      ></input>
    </view>

    <view class="form-item" bindtap="onAddressPicker">
      <view class="label">省市区</view>
      <view class="picker-value">
        <text wx:if="{{province && city && district}}">{{province}} {{city}} {{district}}</text>
        <text wx:else class="placeholder">请选择省市区</text>
      </view>
      <text class="arrow">›</text>
    </view>

    <view class="form-item textarea-item">
      <view class="label">详细地址</view>
      <textarea 
        class="textarea" 
        placeholder="请输入详细地址" 
        value="{{detail}}"
        bindinput="onDetailInput"
        maxlength="200"
      ></textarea>
    </view>

    <view class="form-item switch-item">
      <view class="label">设为默认地址</view>
      <switch 
        checked="{{isDefault}}" 
        color="#ff6b6b"
        bindchange="onDefaultChange"
      ></switch>
    </view>
  </view>

  <view class="save-btn" bindtap="onSave">
    <text>保存</text>
  </view>
</view>