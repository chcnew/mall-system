.address-edit {
  min-height: 100vh;
  background: #f5f5f5;
  padding-bottom: 140rpx;
}

.form {
  background: #fff;
}

.form-item {
  display: flex;
  align-items: center;
  padding: 24rpx;
  border-bottom: 1rpx solid #f5f5f5;
}

.form-item:last-child {
  border-bottom: none;
}

.label {
  width: 180rpx;
  font-size: 28rpx;
  color: #333;
  flex-shrink: 0;
}

.input {
  flex: 1;
  font-size: 28rpx;
  color: #333;
}

.picker-value {
  flex: 1;
  font-size: 28rpx;
}

.placeholder {
  color: #ccc;
}

.arrow {
  font-size: 40rpx;
  color: #ccc;
  margin-left: 20rpx;
}

.textarea-item {
  display: flex;
  flex-direction: column;
  align-items: flex-start;
}

.textarea {
  width: 100%;
  min-height: 120rpx;
  margin-top: 12rpx;
  font-size: 28rpx;
  color: #333;
}

.switch-item {
  justify-content: space-between;
}

.save-btn {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  background: linear-gradient(90deg, #ff6b6b 0%, #feca57 100%);
  color: #fff;
  font-size: 30rpx;
  font-weight: 600;
  text-align: center;
  padding: 28rpx;
  padding-bottom: calc(28rpx + env(safe-area-inset-bottom));
  box-shadow: 0 -4rpx 20rpx rgba(0,0,0,0.1);
}