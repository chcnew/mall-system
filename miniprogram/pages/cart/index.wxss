/* pages/cart/index.wxss */

.container {
  min-height: 100vh;
  background-color: #f5f5f5;
  padding-bottom: 120rpx; /* TabBar 高度 */
}

/* 空购物车 */
.empty-cart {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 80rpx 20rpx;
}

.empty-image {
  width: 200rpx;
  height: 200rpx;
  margin-bottom: 20rpx;
}

.empty-text {
  font-size: 28rpx;
  color: #999;
}

.empty-actions {
  display: flex;
  gap: 20rpx;
}

/* 顶部工具栏 */
.toolbar {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 20rpx;
  background-color: #fff;
  border-bottom: 1rpx solid #f0f0f0;
}

.select-all {
  display: flex;
  align-items: center;
  gap: 12rpx;
}

.checkbox {
  width: 36rpx;
  height: 36rpx;
}

.select-text {
  font-size: 28rpx;
  color: #333;
}

.toolbar-actions {
  display: flex;
  gap: 20rpx;
}

.edit-text,
.delete-text {
  font-size: 28rpx;
  color: #1890ff;
}

/* 购物车列表 */
.cart-content {
  padding: 20rpx;
}

.cart-list {
  background-color: #fff;
  border-radius: 12rpx;
}

.cart-item {
  display: flex;
  padding: 20rpx;
  border-bottom: 1rpx solid #f0f0f0;
}

.cart-item:last-child {
  border-bottom: none;
}

.item-checkbox {
  padding: 0 16rpx 0 0;
}

.item-product-info {
  flex: 1;
  padding: 0 20rpx;
}

.item-name {
  font-size: 28rpx;
  color: #333;
  line-height: 1.4;
  margin-bottom: 12rpx;
}

.item-price {
  font-size: 32rpx;
  font-weight: bold;
  color: #ff4d4f;
}

.quantity-control {
  display: flex;
  align-items: center;
  gap: 16rpx;
}

.quantity-btn {
  width: 40rpx;
  height: 40rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  background-color: #f8f8f8;
  border-radius: 4rpx;
}

.quantity-btn:active {
  background-color: #e8e8e8;
}

.btn-icon {
  width: 20rpx;
  height: 20rpx;
}

.quantity-value {
  font-size: 28rpx;
  color: #333;
  min-width: 40rpx;
  text-align: center;
}

/* 编辑模式 */
.edit-item {
  display: flex;
  align-items: center;
  padding: 20rpx;
  border-bottom: 1rpx solid #f0f0f0;
}

.edit-item:last-child {
  border-bottom: none;
}

.item-info {
  flex: 1;
  margin: 0 20rpx;
  overflow: hidden;
}

.item-image {
  width: 120rpx;
  height: 120rpx;
  border-radius: 8rpx;
  background-color: #f5f5f5;
}

.item-detail {
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  height: 120rpx;
  overflow: hidden;
}

.item-name {
  font-size: 28rpx;
  color: #333;
}

.item-specs {
  font-size: 24rpx;
  color: #999;
}

.item-price {
  font-size: 32rpx;
  font-weight: bold;
  color: #ff4d4f;
}

.item-quantity {
  font-size: 24rpx;
  color: #999;
}

/* 底部结算栏 */
.bottom-bar {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 20rpx 40rpx;
  padding-bottom: calc(20rpx + env(safe-area-inset-bottom));
  background-color: #fff;
  border-top: 1rpx solid #f0f0f0;
  box-shadow: 0 -2rpx 10rpx rgba(0, 0, 0, 0.1);
}

.bottom-left {
  display: flex;
  align-items: center;
  gap: 20rpx;
}

.selected-count {
  font-size: 24rpx;
  color: #999;
}

.total-price {
  font-size: 32rpx;
  font-weight: bold;
  color: #ff4d4f;
}

.bottom-right {
  display: flex;
}

.checkout-btn {
  padding: 16rpx 60rpx;
  background-color: #1890ff;
  color: #fff;
  font-size: 28rpx;
  border-radius: 48rpx;
  border: none;
  line-height: 1;
}

/* 加载中 */
.loading-container {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 80rpx 20rpx;
}

.loading-icon {
  width: 60rpx;
  height: 60rpx;
  margin-bottom: 20rpx;
}

.loading-text {
  font-size: 24rpx;
  color: #999;
}