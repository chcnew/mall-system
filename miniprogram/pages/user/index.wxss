/* pages/user/index.wxss */

.container {
  min-height: 100vh;
  background-color: #f5f5f5;
  padding-bottom: 20rpx;
}

/* 未登录状态 */
.not-logged-in {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  min-height: 80vh;
  padding: 40rpx;
}

.login-hint {
  display: flex;
  flex-direction: column;
  align-items: center;
  margin-bottom: 60rpx;
}

.login-icon {
  width: 120rpx;
  height: 120rpx;
  margin-bottom: 20rpx;
  opacity: 0.6;
}

.login-text {
  font-size: 28rpx;
  color: #999;
}

.login-actions {
  width: 100%;
  max-width: 400rpx;
}

/* 已登录状态 */
.logged-in {
  padding-bottom: 20rpx;
}

/* 用户信息 */
.user-info-section {
  display: flex;
  align-items: center;
  padding: 40rpx 20rpx;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  margin: 20rpx;
  border-radius: 12rpx;
}

.user-avatar-container {
  position: relative;
  margin-right: 20rpx;
}

.user-avatar {
  width: 120rpx;
  height: 120rpx;
  border-radius: 50%;
  background-color: #fff;
  border: 4rpx solid rgba(255, 255, 255, 0.3);
}

.vip-badge {
  position: absolute;
  bottom: -8rpx;
  right: -8rpx;
  width: 36rpx;
  height: 36rpx;
}

.user-detail {
  flex: 1;
}

.user-name {
  display: block;
  font-size: 32rpx;
  font-weight: 600;
  color: #fff;
  margin-bottom: 12rpx;
}

.user-meta {
  display: flex;
  align-items: center;
}

.user-phone,
.user-id {
  font-size: 24rpx;
  color: rgba(255, 255, 255, 0.8);
}

.logout-btn {
  padding: 12rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

.logout-icon {
  width: 36rpx;
  height: 36rpx;
}

/* 会员信息 */
.member-section {
  display: flex;
  background-color: #fff;
  margin: 0 20rpx 20rpx;
  border-radius: 12rpx;
  padding: 30rpx;
}

.member-item {
  flex: 1;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.member-label {
  font-size: 24rpx;
  color: #999;
  margin-bottom: 10rpx;
}

.member-value {
  font-size: 32rpx;
  font-weight: 600;
  color: #333;
}

.member-divider {
  width: 1rpx;
  background-color: #f0f0f0;
}

/* 订单管理 */
.orders-section {
  background-color: #fff;
  margin: 0 20rpx 20rpx;
  border-radius: 12rpx;
  padding: 20rpx 20rpx 30rpx;
}

.section-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 30rpx;
  padding: 0 10rpx;
}

.section-title {
  font-size: 32rpx;
  font-weight: 600;
  color: #333;
}

.section-more {
  display: flex;
  align-items: center;
}

.more-text {
  font-size: 24rpx;
  color: #999;
  margin-right: 8rpx;
}

.arrow-icon {
  width: 24rpx;
  height: 24rpx;
}

.orders-grid {
  display: flex;
  justify-content: space-between;
}

.order-item {
  display: flex;
  flex-direction: column;
  align-items: center;
  position: relative;
  padding: 10rpx;
}

.order-icon {
  width: 56rpx;
  height: 56rpx;
  margin-bottom: 12rpx;
}

.order-label {
  font-size: 24rpx;
  color: #666;
}

.order-badge {
  position: absolute;
  top: 8rpx;
  right: 16rpx;
  min-width: 28rpx;
  height: 28rpx;
  padding: 0 6rpx;
  background-color: #ff4d4f;
  border-radius: 14rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 20rpx;
  color: #fff;
  line-height: 1;
}

/* 功能菜单 */
.menu-section {
  background-color: #fff;
  margin: 0 20rpx 20rpx;
  border-radius: 12rpx;
}

.menu-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 30rpx 20rpx;
  border-bottom: 1rpx solid #f0f0f0;
}

.menu-item:last-child {
  border-bottom: none;
}

.menu-left {
  display: flex;
  align-items: center;
}

.menu-icon {
  width: 48rpx;
  height: 48rpx;
  margin-right: 20rpx;
}

.menu-text {
  font-size: 28rpx;
  color: #333;
}

.menu-right {
  display: flex;
  align-items: center;
}

/* 底部声明 */
.footer {
  padding: 40rpx 20rpx;
  text-align: center;
}

.footer-text {
  font-size: 24rpx;
  color: #ccc;
}

/* 默认图片 */
.default-avatar {
  width: 120rpx;
  height: 120rpx;
  background-color: #f0f0f0;
  border-radius: 50%;
}

.default-product {
  width: 200rpx;
  height: 200rpx;
  background-color: #f5f5f5;
}

.default-category {
  width: 80rpx;
  height: 80rpx;
  background-color: #f5f5f5;
  border-radius: 12rpx;
}

/* 加载中 */
.loading-container {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 80rpx 20rpx;
}

.loading-icon {
  width: 60rpx;
  height: 60rpx;
  margin-bottom: 20rpx;
}

.loading-text {
  font-size: 24rpx;
  color: #999;
}

/* 空购物车 */
.empty-cart {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  min-height: 80vh;
  padding: 40rpx;
}

.empty-image {
  width: 200rpx;
  height: 200rpx;
  margin-bottom: 20rpx;
}

.empty-text {
  font-size: 28rpx;
  color: #999;
  margin-bottom: 40rpx;
}

.empty-actions {
  display: flex;
  gap: 20rpx;
}

/* 通用 */
.ellipsis {
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.ellipsis-2 {
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
  overflow: hidden;
}