/* pages/product/index.wxss */

.container {
  min-height: 100vh;
  background-color: #f5f5f5;
  padding-bottom: 120rpx; /* TabBar 高度 */
}

/* 商品主图 */
.product-images {
  width: 100%;
  height: 750rpx;
  background-color: #fff;
  position: sticky;
  top: 0;
  z-index: 10;
}

.main-image {
  width: 100%;
  height: 100%;
}

/* 商品基本信息 */
.product-basic {
  background-color: #fff;
  padding: 30rpx 20rpx;
  margin-bottom: 16rpx;
}

.price-section {
  display: flex;
  align-items: baseline;
  margin-bottom: 24rpx;
}

.price-main {
  display: flex;
  align-items: baseline;
}

.current-price {
  font-size: 48rpx;
  font-weight: bold;
  color: #ff4d4f;
  margin-right: 16rpx;
}

.original-price {
  font-size: 28rpx;
  color: #999;
  text-decoration: line-through;
}

.sold-info {
  display: flex;
  gap: 24rpx;
  font-size: 24rpx;
  color: #666;
}

.product-meta {
  margin-bottom: 30rpx;
}

.tag {
  display: inline-block;
  padding: 4rpx 12rpx;
  font-size: 22rpx;
  border-radius: 4rpx;
  margin-right: 12rpx;
}

.tag-hot {
  background-color: #ff4d4f;
  color: #fff;
}

.tag-new {
  background-color: #52c41a;
  color: #fff;
}

.product-name {
  font-size: 32rpx;
  font-weight: 600;
  color: #333;
  line-height: 1.4;
  margin-bottom: 12rpx;
}

.product-subtitle {
  font-size: 26rpx;
  color: #999;
  line-height: 1.4;
}

/* 规格选择区域 */
.sku-section {
  background-color: #fff;
  margin-bottom: 16rpx;
  padding: 30rpx 20rpx;
  border-radius: 12rpx;
}

.section-title {
  font-size: 28rpx;
  font-weight: 600;
  color: #333;
  margin-bottom: 20rpx;
}

/* 规格容器 */
.sku-container {
  padding: 20rpx;
  background-color: #f8f8f8;
  border-radius: 12rpx;
  margin-bottom: 20rpx;
}

.sku-block {
  margin-bottom: 24rpx;
}

.block-title {
  font-size: 26rpx;
  font-weight: 500;
  color: #333;
  margin-bottom: 16rpx;
}

.sku-options {
  display: flex;
  flex-wrap: wrap;
  gap: 12rpx;
}

.sku-option {
  padding: 12rpx 24rpx;
  background-color: #fff;
  border: 1rpx solid #e0e0e0;
  border-radius: 8rpx;
  font-size: 26rpx;
  color: #333;
  transition: all 0.3s ease;
}

.sku-option.active {
  background-color: #e6f7ff;
  color: #1890ff;
  border-color: #91d5ff;
}

.sku-text {
  margin-left: 8rpx;
}

/* 数量选择区域 */
.quantity-section {
  background-color: #fff;
  margin-bottom: 16rpx;
  padding: 30rpx 20rpx;
  border-radius: 12rpx;
}

.quantity-control {
  display: flex;
  align-items: center;
  justify-content: center;
  gap: 40rpx;
}

.qty-btn {
  width: 64rpx;
  height: 64rpx;
  border-radius: 50%;
  background-color: #f5f5f5;
  display: flex;
  align-items: center;
  justify-content: center;
}

.btn-icon {
  font-size: 36rpx;
  color: #666;
}

.qty-value {
  font-size: 32rpx;
  font-weight: 600;
  color: #333;
  min-width: 80rpx;
}

.stock-hint {
  text-align: center;
  font-size: 24rpx;
  color: #ff9500;
  margin-top: 16rpx;
}

/* 底部操作栏 */
.bottom-bar {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 20rpx 40rpx;
  padding-bottom: calc(20rpx + env(safe-area-inset-bottom));
  background-color: #fff;
  border-top: 1rpx solid #f0f0f0;
  box-shadow: 0 -2rpx 10rpx rgba(0, 0, 0, 0.1);
}

.action-btn {
  display: flex;
  align-items: center;
  gap: 16rpx;
}

.favorite-btn,
.cart-btn {
  width: 64rpx;
  height: 64rpx;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
}

.btn-icon {
  width: 32rpx;
  height:  32rpx;
}

.buy-btn {
  flex: 1;
  height: 72rpx;
  border-radius: 48rpx;
  background: linear-gradient(90deg, #ff4d4f 0%, #ff7875 100%);
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 28rpx;
  font-weight: 600;
  color: #fff;
  border: none;
}

/* 图片列表 */
.images-section {
  background-color: #fff;
  margin-bottom: 16rpx;
  padding: 30rpx 20rpx;
  border-radius: 12rpx;
}

.image-list {
  display: grid;
  grid-template-columns: repeat(3, 1fr);
  gap: 16rpx;
}

.image-item {
  position: relative;
  padding-bottom: 100%;
}

.image {
  width: 100%;
  padding-bottom: 100%;
  border-radius: 8rpx;
  background-color: #f8f8f8;
}

/* 加载中 */
.loading-container {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 120rpx 20rpx;
}

.loading-icon {
  width: 80rpx;
  height: 80rpx;
  margin-bottom: 20rpx;
  animation: rotate 1s linear infinite;
}

.loading-text {
  font-size: 24rpx;
  color: #999;
}

@keyframes rotate {
  from {
    transform: rotate(0deg);
  }
  to {
    transform: rotate(360deg);
  }
}

/* 规格选择弹窗 */
.sku-modal-mask {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background-color: rgba(0, 0, 0, 0.6);
  z-index: 1000;
  display: flex;
  align-items: center;
  justify-content: center;
}

.sku-modal {
  width: 600rpx;
  background-color: #fff;
  border-radius: 12rpx;
  padding: 30rpx;
  max-height: 80vh;
  display: flex;
  flex-direction: column;
}

.modal-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 20rpx;
}

.modal-title {
  font-size: 32rpx;
  font-weight: 600;
  color: #333;
}

.modal-close {
  padding: 8rpx;
}

.close-icon {
  width: 32rpx;
  height: 32rpx;
}

.modal-content {
  max-height: 60vh;
  overflow-y: auto;
  padding-bottom: 20rpx;
}

.selected-info {
  font-size: 26rpx;
  color: #666;
  margin-bottom: 20rpx;
}

.info-label {
  margin-right: 8rpx;
}

.info-content {
  color: #333;
  margin-bottom: 16rpx;
}

.info-empty {
  color: #999;
}

.info-item {
  margin-bottom: 8rpx;
}

.spec-item {
  margin-right: 16rpx;
  color: #666;
}

.sku-selector {
  display: flex;
  flex-wrap: wrap;
  gap: 16rpx;
  margin-top: 16rpx;
}

.sku-group {
  margin-bottom: 20rpx;
}

.group-title {
  font-size: 26r;
  font-weight: 500;
  color: #333;
  margin-bottom: 12rpx;
}

.sku-list {
  display: flex;
  flex-wrap: wrap;
  gap: 12rpx;
}

.sku-item {
  padding: 12rpx 20rpx;
  background-color: #f8f8f8;
  border-radius: 8rpx;
  font-size: 26rpx;
  color: #333;
  transition: all 0.3s ease;
}

.sku-item.active {
  background-color: #e6f7ff;
  color: #1890ff;
  border-color: #91d5ff;
}

.sku-text {
  margin-left: 8rpx;
}

.modal-footer {
  display: flex;
  justify-content: flex-end;
  gap: 16rpx;
  margin-top: 20rpx;
  padding-top: 20r;
  border-top: 1rpx solid #f0f0f0;
}

.modal-close-btn,
.modal-confirm-btn {
  padding: 16rpx 32rpx;
  border-radius: 48rpx;
  font-size: 28rpx;
  border: none;
  line-height: 1;
}

.modal-close-btn {
  background-color: #f5f5f5;
  color: #666;
}

.modal-confirm-btn {
  background-color: #1890ff;
  color: #fff;
}

/* 通用 */
.ellipsis {
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.ellipsis-2 {
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
  overflow: hidden;
}

/* 默认图片 */
.default-product {
  width: 100%;
  height: 100%;
  background-color: #f5f5f5;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 24rpx;
  color: #ccc;
}
