<view class="pay">
  <view class="amount-card">
    <view class="amount-label">支付金额</view>
    <view class="amount-value">¥{{amount}}</view>
    <view class="order-no">订单号：{{orderNo}}</view>
  </view>

  <view class="section">
    <view class="section-title">选择支付方式</view>
    <view class="methods-list">
      <view 
        class="method-item {{item.checked ? 'active' : ''}}" 
        wx:for="{{paymentMethods}}" 
        wx:key="id"
        data-id="{{item.id}}"
        bindtap="onSelectMethod"
      >
        <image class="method-icon" src="{{item.icon}}"></image>
        <text class="method-name">{{item.name}}</text>
        <view class="radio-icon">
          <view wx:if="{{item.checked}}" class="radio-checked"></view>
        </view>
      </view>
    </view>
  </view>

  <view class="tips">
    <view class="tip-item">• 请在支付后及时查看订单状态</view>
    <view class="tip-item">• 如遇问题请联系客服</view>
  </view>

  <view class="btn-wrapper">
    <view class="cancel-btn" bindtap="onCancel">
      <text>取消支付</text>
    </view>
    <view class="pay-btn {{paying ? 'disabled' : ''}}" bindtap="onPay">
      <text wx:if="{{!paying}}">立即支付</text>
      <text wx:else>支付中...</text>
    </view>
  </view>
</view>