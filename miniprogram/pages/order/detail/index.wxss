.order-detail {
  min-height: 100vh;
  background: #f5f5f5;
  padding-bottom: 160rpx;
}

.loading-wrapper {
  display: flex;
  justify-content: center;
  align-items: center;
  min-height: 100vh;
  color: #999;
}

.content {
  padding: 20rpx;
}

.status-card {
  background: linear-gradient(135deg, #ff6b6b 0%, #feca57 100%);
  border-radius: 12rpx;
  padding: 40rpx 30rpx;
  margin-bottom: 20rpx;
  color: #fff;
  text-align: center;
}

.status-icon {
  font-size: 80rpx;
  margin-bottom: 16rpx;
}

.status-text {
  font-size: 36rpx;
  font-weight: 600;
  margin-bottom: 12rpx;
}

.status-tip {
  font-size: 24rpx;
  opacity: 0.9;
}

.section {
  background: #fff;
  border-radius: 12rpx;
  padding: 24rpx;
  margin-bottom: 20rpx;
}

.section-title {
  font-size: 28rpx;
  font-weight: 600;
  color: #333;
  margin-bottom: 20rpx;
}

.info-cell {
  display: flex;
  justify-content: space-between;
  margin-bottom: 16rpx;
}

.info-cell:last-child {
  margin-bottom: 0;
}

.info-cell .label {
  font-size: 26rpx;
  color: #666;
}

.info-cell .value {
  font-size: 26rpx;
  color: #333;
  text-align: right;
  flex: 1;
  margin-left: 40rpx;
}

.address-cell .value {
  text-align: right;
}

.product-list {
  display: flex;
  flex-direction: column;
  gap: 20rpx;
}

.product-item {
  display: flex;
  padding: 20rpx 0;
}

.product-item:not(:last-child) {
  border-bottom: 1rpx solid #f5f5f5;
}

.product-cover {
  width: 160rpx;
  height: 160rpx;
  border-radius: 8rpx;
  background: #f5f5f5;
  margin-right: 20rpx;
}

.product-info {
  flex: 1;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
}

.product-name {
  font-size: 28rpx;
  color: #333;
  line-height: 1.4;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
  overflow: hidden;
}

.product-sku {
  font-size: 24rpx;
  color: #999;
}

.product-bottom {
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.product-price {
  font-size: 32rpx;
  font-weight: 600;
  color: #ff6b6b;
}

.product-quantity {
  font-size: 26rpx;
  color: #999;
}

.price-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 16rpx;
}

.price-item:last-child {
  margin-bottom: 0;
}

.price-item .label {
  font-size: 26rpx;
  color: #666;
}

.price-item .value {
  font-size: 28rpx;
  color: #333;
}

.price-item.discount .value {
  color: #ff6b6b;
}

.price-item.total {
  padding-top: 16rpx;
  border-top: 1rpx solid #f5f5f5;
  margin-top: 16rpx;
}

.price-item.total .label {
  font-size: 28rpx;
  font-weight: 600;
}

.price-item.total .value {
  font-size: 36rpx;
  font-weight: 600;
  color: #ff6b6b;
}

.timeline {
  position: relative;
  padding-left: 40rpx;
}

.timeline::before {
  content: '';
  position: absolute;
  left: 10rpx;
  top: 10rpx;
  bottom: 10rpx;
  width: 2rpx;
  background: #e0e0e0;
}

.timeline-item {
  position: relative;
  padding-bottom: 30rpx;
}

.timeline-item:last-child {
  padding-bottom: 0;
}

.timeline-dot {
  position: absolute;
  left: -35rpx;
  top: 6rpx;
  width: 14rpx;
  height: 14rpx;
  border-radius: 50%;
  background: #ff6b6b;
  border: 3rpx solid #fff;
  box-shadow: 0 0 0 2rpx #ff6b6b;
}

.timeline-item:not(:first-child) .timeline-dot {
  background: #e0e0e0;
  box-shadow: none;
}

.timeline-content {
  display: flex;
  flex-direction: column;
}

.timeline-time {
  font-size: 24rpx;
  color: #999;
  margin-bottom: 8rpx;
}

.timeline-text {
  font-size: 26rpx;
  color: #333;
  line-height: 1.5;
}

.action-bar {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  background: #fff;
  padding: 20rpx 24rpx;
  padding-bottom: calc(20rpx + env(safe-area-inset-bottom));
  display: flex;
  justify-content: flex-end;
  box-shadow: 0 -4rpx 20rpx rgba(0,0,0,0.08);
}

.action-buttons {
  display: flex;
  gap: 20rpx;
}

.btn {
  min-width: 160rpx;
  height: 64rpx;
  border-radius: 32rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  font-size: 26rpx;
  font-weight: 600;
}

.btn.secondary {
  background: #f5f5f5;
  color: #333;
}

.btn.primary {
  background: linear-gradient(90deg, #ff6b6b 0%, #feca57 100%);
  color: #fff;
}