.order-confirm {
  min-height: 100vh;
  background: #f5f5f5;
  padding-bottom: 120rpx;
}

.loading-wrapper {
  display: flex;
  justify-content: center;
  align-items: center;
  min-height: 100vh;
  color: #999;
}

.content {
  padding: 20rpx;
}

.address-card {
  background: #fff;
  border-radius: 12rpx;
  padding: 30rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 20rpx;
  position: relative;
}

.address-card::before {
  content: '';
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  height: 8rpx;
  background: linear-gradient(90deg, #ff6b6b 0%, #feca57 100%);
  border-radius: 12rpx 12rpx 0 0;
}

.address-info {
  flex: 1;
}

.address-header {
  display: flex;
  align-items: center;
  margin-bottom: 12rpx;
}

.address-header .name {
  font-size: 32rpx;
  font-weight: 600;
  color: #333;
  margin-right: 20rpx;
}

.address-header .phone {
  font-size: 28rpx;
  color: #666;
}

.default-tag {
  font-size: 20rpx;
  color: #ff6b6b;
  border: 1rpx solid #ff6b6b;
  border-radius: 4rpx;
  padding: 2rpx 8rpx;
  margin-left: 12rpx;
}

.address-detail {
  font-size: 26rpx;
  color: #666;
  line-height: 1.6;
}

.no-address {
  flex: 1;
  color: #999;
  font-size: 28rpx;
}

.arrow-right {
  font-size: 40rpx;
  color: #ccc;
  margin-left: 20rpx;
}

.section {
  background: #fff;
  border-radius: 12rpx;
  padding: 24rpx;
  margin-bottom: 20rpx;
}

.section-title {
  font-size: 28rpx;
  font-weight: 600;
  color: #333;
  margin-bottom: 20rpx;
}

.product-list {
  display: flex;
  flex-direction: column;
  gap: 20rpx;
}

.product-item {
  display: flex;
  padding: 20rpx 0;
}

.product-item:not(:last-child) {
  border-bottom: 1rpx solid #f5f5f5;
}

.product-cover {
  width: 160rpx;
  height: 160rpx;
  border-radius: 8rpx;
  background: #f5f5f5;
  margin-right: 20rpx;
}

.product-info {
  flex: 1;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
}

.product-name {
  font-size: 28rpx;
  color: #333;
  line-height: 1.4;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
  overflow: hidden;
}

.product-sku {
  font-size: 24rpx;
  color: #999;
}

.product-bottom {
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.product-price {
  font-size: 32rpx;
  font-weight: 600;
  color: #ff6b6b;
}

.product-quantity {
  font-size: 26rpx;
  color: #999;
}

.coupon-cell {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 20rpx 0;
}

.coupon-selected {
  flex: 1;
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.coupon-name {
  font-size: 26rpx;
  color: #333;
}

.coupon-amount {
  font-size: 28rpx;
  font-weight: 600;
  color: #ff6b6b;
}

.coupon-unselected {
  flex: 1;
  font-size: 26rpx;
  color: #ff6b6b;
}

.remove-btn {
  width: 40rpx;
  height: 40rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  color: #999;
  font-size: 24rpx;
  margin-left: 20rpx;
}

.remark-input {
  padding: 20rpx 0;
}

.remark-textarea {
  width: 100%;
  min-height: 120rpx;
  font-size: 28rpx;
  color: #333;
}

.price-info {
  background: #fff;
  border-radius: 12rpx;
  padding: 24rpx;
  margin-bottom: 20rpx;
}

.price-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 16rpx;
}

.price-item:last-child {
  margin-bottom: 0;
}

.price-item .label {
  font-size: 26rpx;
  color: #666;
}

.price-item .value {
  font-size: 28rpx;
  color: #333;
}

.price-item.discount .value {
  color: #ff6b6b;
}

.submit-bar {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  background: #fff;
  padding: 20rpx 24rpx;
  padding-bottom: calc(20rpx + env(safe-area-inset-bottom));
  display: flex;
  justify-content: space-between;
  align-items: center;
  box-shadow: 0 -4rpx 20rpx rgba(0,0,0,0.08);
}

.price-wrapper {
  display: flex;
  align-items: baseline;
}

.price-label {
  font-size: 26rpx;
  color: #333;
}

.price-amount {
  font-size: 40rpx;
  font-weight: 600;
  color: #ff6b6b;
}

.submit-btn {
  min-width: 200rpx;
  height: 80rpx;
  background: linear-gradient(90deg, #ff6b6b 0%, #feca57 100%);
  color: #fff;
  font-size: 30rpx;
  font-weight: 600;
  border-radius: 40rpx;
  display: flex;
  justify-content: center;
  align-items: center;
}

.submit-btn.disabled {
  opacity: 0.6;
}