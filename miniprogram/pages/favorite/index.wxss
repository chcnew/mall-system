.favorite {
  min-height: 100vh;
  background: #f5f5f5;
  padding-bottom: 140rpx;
}

.loading-wrapper {
  display: flex;
  justify-content: center;
  align-items: center;
  min-height: 100vh;
  color: #999;
}

.empty {
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  min-height: 80vh;
}

.empty-icon {
  width: 200rpx;
  height: 200rpx;
  margin-bottom: 20rpx;
}

.empty-text {
  font-size: 28rpx;
  color: #999;
}

.content {
  padding: 20rpx;
}

.toolbar {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 20rpx 0;
  margin-bottom: 20rpx;
}

.count {
  font-size: 26rpx;
  color: #999;
}

.edit-btn {
  font-size: 26rpx;
  color: #ff6b6b;
}

.product-list {
  display: flex;
  flex-direction: column;
  gap: 20rpx;
}

.product-item {
  display: flex;
  background: #fff;
  border-radius: 12rpx;
  padding: 20rpx;
  position: relative;
  overflow: hidden;
}

.product-item.selected {
  background: #fff5f5;
}

.checkbox {
  width: 40rpx;
  display: flex;
  justify-content: center;
  align-items: flex-start;
  padding-top: 60rpx;
  margin-right: 12rpx;
}

.checkbox::before {
  content: '';
  width: 36rpx;
  height: 36rpx;
  border: 2rpx solid #ccc;
  border-radius: 50%;
}

.checkbox-checked {
  width: 20rpx;
  height: 20rpx;
  background: #ff6b6b;
  border-radius: 50%;
  margin-top: 8rpx;
  margin-left: 8rpx;
}

.product-cover {
  width: 200rpx;
  height: 200rpx;
  border-radius: 8rpx;
  background: #f5f5f5;
  margin-right: 20rpx;
  flex-shrink: 0;
}

.product-info {
  flex: 1;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
}

.product-name {
  font-size: 28rpx;
  color: #333;
  line-height: 1.4;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
  overflow: hidden;
}

.product-meta {
  display: flex;
  align-items: baseline;
  gap: 12rpx;
}

.original-price {
  font-size: 22rpx;
  color: #999;
  text-decoration: line-through;
}

.price {
  font-size: 32rpx;
  font-weight: 600;
  color: #ff6b6b;
}

.sales {
  font-size: 22rpx;
  color: #999;
  margin-left: auto;
}

.product-actions {
  display: flex;
  justify-content: flex-end;
}

.add-cart-btn {
  padding: 12rpx 30rpx;
  background: linear-gradient(90deg, #ff6b6b 0%, #feca57 100%);
  color: #fff;
  font-size: 24rpx;
  border-radius: 32rpx;
}

.delete-bar {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  background: #fff;
  padding: 20rpx 24rpx;
  padding-bottom: calc(20rpx + env(safe-area-inset-bottom));
  box-shadow: 0 -4rpx 20rpx rgba(0,0,0,0.08);
}

.delete-btn {
  width: 100%;
  height: 80rpx;
  background: #ff6b6b;
  color: #fff;
  font-size: 30rpx;
  font-weight: 600;
  border-radius: 40rpx;
  display: flex;
  justify-content: center;
  align-items: center;
}