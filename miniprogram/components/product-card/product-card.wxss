/* components/product-card/product-card.wxss */
.product-card {
  background-color: #fff;
  border-radius: 12rpx;
  overflow: hidden;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.1);
  margin-bottom: 20rpx;
  position: relative;
}

.product-image-container {
  position: relative;
  width: 100%;
  padding-top: 100%; /* 1:1 比例 */
}

.product-image {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background-color: #f5f5f5;
}

.product-tags {
  position: absolute;
  top: 16rpx;
  left: 16rpx;
  display: flex;
  flex-wrap: wrap;
  gap: 8rpx;
  z-index: 2;
}

.tag {
  padding: 6rpx 12rpx;
  font-size: 22rpx;
  border-radius: 4rpx;
  font-weight: 500;
}

.tag-new {
  background-color: #52c41a;
  color: #fff;
}

.tag-hot {
  background-color: #ff4d4f;
  color: #fff;
}

.sold-out {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background-color: rgba(0, 0, 0, 0.5);
  display: flex;
  justify-content: center;
  align-items: center;
  z-index: 2;
}

.sold-out-text {
  color: #fff;
  font-size: 28rpx;
  font-weight: 500;
}

.product-info {
  padding: 20rpx;
}

.product-name {
  font-size: 28rpx;
  color: #333;
  line-height: 1.4;
  height: 78rpx; /* 2行高度 */
  margin-bottom: 8rpx;
}

.product-desc {
  font-size: 24rpx;
  color: #999;
  line-height: 1.3;
  height: 34rpx; /* 单行高度 */
  margin-bottom: 16rpx;
}

.product-bottom {
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.product-price {
  display: flex;
  align-items: baseline;
  gap: 8rpx;
}

.current-price {
  font-size: 32rpx;
  font-weight: bold;
  color: #ff4d4f;
}

.original-price {
  font-size: 24rpx;
  color: #999;
  text-decoration: line-through;
}

.product-actions {
  display: flex;
  align-items: center;
  gap: 16rpx;
}

.favorite-btn {
  width: 40rpx;
  height: 40rpx;
  display: flex;
  justify-content: center;
  align-items: center;
}

.favorite-icon {
  width: 32rpx;
  height: 32rpx;
}

.favorite-active {
  filter: brightness(0) invert(0.4);
}

.add-cart-btn {
  width: 48rpx;
  height: 48rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  background-color: #fff;
  border-radius: 50%;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.1);
  transition: all 0.3s ease;
}

.add-cart-btn:active {
  transform: scale(0.95);
}

.cart-icon {
  width: 24rpx;
  height: 24rpx;
}

/* 动画效果 */
@keyframes shake {
  0%, 100% { transform: translateX(0); }
  10%, 30%, 50%, 70%, 90% { transform: translateX(-3rpx); }
  20%, 40%, 60%, 80% { transform: translateX(3rpx); }
}

.shake {
  animation: shake 0.5s ease-in-out;
}